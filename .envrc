if [ -d "venv" ]; then
	echo "using existing python venv"
	source venv/bin/activate
else
	echo "creating new python venv"
	python3 -m pip install -U pip virtualenv
	virtualenv venv
	source venv/bin/activate
	if [ -f "requirements.txt" ]; then
		python -m pip install -r requirements.txt
	fi
fi
unset PS1
